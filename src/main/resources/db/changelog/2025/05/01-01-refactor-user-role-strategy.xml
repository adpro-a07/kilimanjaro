<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1746084064028-3" author="ryuun1corn">
        <dropForeignKeyConstraint baseTableName="admins" constraintName="fk_admins_on_id"/>
    </changeSet>
    <changeSet id="1746084064028-4" author="ryuun1corn">
        <dropForeignKeyConstraint baseTableName="customers" constraintName="fk_customers_on_id"/>
    </changeSet>
    <changeSet id="1746084064028-5" author="ryuun1corn">
        <dropForeignKeyConstraint baseTableName="technicians" constraintName="fk_technicians_on_id"/>
    </changeSet>
    <changeSet id="1746084064028-1" author="ryuun1corn">
        <createTable tableName="users">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="role" type="VARCHAR(31)"/>
            <column name="full_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="experience" type="VARCHAR(500)"/>
            <column name="total_jobs_done" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="total_income" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1746084064028-2" author="ryuun1corn">
        <addUniqueConstraint columnNames="email" constraintName="uc_users_email" tableName="users"/>
    </changeSet>
    <changeSet id="1746084064028-7" author="ryuun1corn">
        <dropTable cascadeConstraints="true" tableName="admins"/>
    </changeSet>
    <changeSet id="1746084064028-8" author="ryuun1corn">
        <dropTable cascadeConstraints="true" tableName="base_users"/>
    </changeSet>
    <changeSet id="1746084064028-9" author="ryuun1corn">
        <dropTable cascadeConstraints="true" tableName="customers"/>
    </changeSet>
    <changeSet id="1746084064028-10" author="ryuun1corn">
        <dropTable cascadeConstraints="true" tableName="technicians"/>
    </changeSet>

</databaseChangeLog>