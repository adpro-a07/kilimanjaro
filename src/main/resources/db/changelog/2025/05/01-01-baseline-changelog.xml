<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1746079511916-1" author="ryuun1corn">
        <createTable tableName="admins">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_admins"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1746079511916-2" author="ryuun1corn">
        <createTable tableName="base_users">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_base_users"/>
            </column>
            <column name="full_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1746079511916-3" author="ryuun1corn">
        <createTable tableName="customers">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_customers"/>
            </column>
            <column name="address" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1746079511916-4" author="ryuun1corn">
        <createTable tableName="technicians">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_technicians"/>
            </column>
            <column name="address" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="experience" type="VARCHAR(500)"/>
            <column name="total_jobs_done" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="total_income" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1746079511916-5" author="ryuun1corn">
        <addUniqueConstraint columnNames="email" constraintName="uc_base_users_email" tableName="base_users"/>
    </changeSet>
    <changeSet id="1746079511916-6" author="ryuun1corn">
        <addForeignKeyConstraint baseColumnNames="id" baseTableName="admins" constraintName="FK_ADMINS_ON_ID"
                                 referencedColumnNames="id" referencedTableName="base_users"/>
    </changeSet>
    <changeSet id="1746079511916-7" author="ryuun1corn">
        <addForeignKeyConstraint baseColumnNames="id" baseTableName="customers" constraintName="FK_CUSTOMERS_ON_ID"
                                 referencedColumnNames="id" referencedTableName="base_users"/>
    </changeSet>
    <changeSet id="1746079511916-8" author="ryuun1corn">
        <addForeignKeyConstraint baseColumnNames="id" baseTableName="technicians" constraintName="FK_TECHNICIANS_ON_ID"
                                 referencedColumnNames="id" referencedTableName="base_users"/>
    </changeSet>

</databaseChangeLog>